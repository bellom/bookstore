{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "parser": "babel-eslint",
    "extends": [
        "airbnb",
        "prettier",
        "plugin:react/recommended"
    ],
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "no-unused-vars": "off",
        "react/jsx-filename-extension": [
            "warn",
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "import/no-unresolved": "off",
        "import/no-named-as-default": "off",
        "import/no-named-as-default-member": "off",
        "no-shadow": "off",
        "arrow-parens": "off",
        "arrow-body-style": "off",
        "comma-dangle": "off"
    }
}